# ==========================
# APPLICATION SETTINGS - RAILWAY PRODUCTION
# ==========================
APP_NAME="SMK Negeri 4 Gallery"
APP_ENV=production
APP_KEY=base64:vB6MipV9g9FqRmCpZBmncAjjppV0ewB++bQf7H6CoZw=
APP_DEBUG=false
APP_URL=https://yourdomain.railway.app

# ==========================
# LOGGING
# ==========================
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# ==========================
# DATABASE CONFIGURATION
# ==========================
DB_CONNECTION=mysql
DB_HOST=${{MYSQLHOST}}
DB_PORT=${{MYSQLPORT}}
DB_DATABASE=${{MYSQL_DB}}
DB_USERNAME=${{MYSQL_USER}}
DB_PASSWORD=${{MYSQL_PASSWORD}}

# ==========================
# CACHE & SESSION
# ==========================
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120

# ==========================
# QUEUE
# ==========================
QUEUE_CONNECTION=sync

# ==========================
# FILESYSTEM
# ==========================
FILESYSTEM_DISK=local

# ==========================
# BROADCASTING
# ==========================
BROADCAST_DRIVER=log

# ==========================
# SANCTUM
# ==========================
SANCTUM_STATEFUL_DOMAINS=yourdomain.railway.app,www.yourdomain.railway.app

# ==========================
# VITE
# ==========================
VITE_APP_NAME="${APP_NAME}"
